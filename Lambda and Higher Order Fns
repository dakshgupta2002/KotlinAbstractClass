fun main() {
    val mapping = mutableMapOf<String, Int>("Daksh" to 18 , "Daksh2" to 28)
    println("Old: $mapping")
    
    mapping["Daksh3"] = 38
    println("New: ${mapping}")
    
    println(mapping.map{"${it.key} is ${it.value}"})
    print("\n \n")
    
    val triple: (Int)->String={a -> "The Triple of $a is ${a*3}"}    
    var num=1 
    while (num<=5){
        println(triple(num))
        num++
    }
    print("\n \n")
    
    val words: List<String> = listOf("aam", "papaya", "banana", "bow", "blow")
    println(words.filter{ it.startsWith("b", ignoreCase=true)}
    .sortedWith{str1:String, str2:String -> str2.length-str1.length}.take(2))
    
    print(words)
    
}


# MAP, SORTEDWITH, FILTER are egs of Higher Order Functions.
# They actually take input of two paramteres instead of initiating a function.
# We can also shorten it using the IT which actually is representation of given parameter.
